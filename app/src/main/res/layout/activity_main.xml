<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:layout_gravity="bottom"
    android:weightSum="100"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="35"
        android:orientation="horizontal"
        android:tileMode="repeat">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:layout_gravity="bottom"
            android:weightSum="120"
            xmlns:android="http://schemas.android.com/apk/res/android">

            <LinearLayout
                android:layout_height="0dp"
                android:layout_width="match_parent"
                android:layout_weight="30">
            </LinearLayout>
            <LinearLayout
                android:layout_height="0dp"
                android:layout_width="match_parent"
                android:layout_weight="30">

                <EditText
                    android:id="@+id/displayView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:background="@android:color/transparent"
                    android:ellipsize="end"
                    android:gravity="right"
                    android:inputType="text|textMultiLine|number"
                    android:maxLength="@integer/edit_text_max_length"
                    android:minLines="1"
                    android:paddingLeft="15sp"
                    android:paddingRight="15sp"
                    android:selectAllOnFocus="true"
                    android:singleLine="false"
                    android:text=""
                    android:textAppearance="@android:style/TextAppearance.Material.Display1" />

            </LinearLayout>
            <LinearLayout
                android:layout_height="0dp"
                android:layout_width="match_parent"
                android:layout_weight="30">
            </LinearLayout>
            <LinearLayout
                android:layout_height="0dp"
                android:layout_width="match_parent"
                android:layout_weight="20">

                <TextView
                    android:id="@+id/resultView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/displayView"
                    android:layout_alignParentStart="true"
                    android:gravity="right"
                    android:freezesText="true"
                    android:textSize="20sp"
                    android:paddingRight="15sp"
                    android:paddingLeft="15sp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

            </LinearLayout>
            <LinearLayout
                android:layout_height="0dp"
                android:layout_width="match_parent"
                android:layout_weight="10">
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="65"
        android:weightSum="100"
        android:tileMode="repeat">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:layout_gravity="bottom"
            android:weightSum="120"
            xmlns:android="http://schemas.android.com/apk/res/android">

            <LinearLayout
                android:id="@+id/LinearLayout01"
                android:layout_height="0dp"
                android:layout_width="match_parent"
                android:layout_weight="20">

                <Button
                    android:id="@+id/Button04"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:background="#00000000"
                    android:text=""
                    android:textColor="#8f8e8e"
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption">

                </Button>
                <Button
                    android:id="@+id/Button05"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:background="#00000000"
                    android:text=""
                    android:textColor="#8f8e8e"
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption">

                </Button>
                <Button
                    android:id="@+id/Button06"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:background="#00000000"
                    android:text=""
                    android:textColor="#8f8e8e"
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption">

                </Button>
                <Button
                    android:id="@+id/btnBack"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:background="#00000000"
                    android:text="โซ"
                    android:textColor="#8f8e8e"
                    android:textSize="20dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption">

                </Button>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/LinearLayout02"
                android:layout_height="0dp"
                android:layout_width="match_parent"
                android:layout_weight="20">

                <Button
                    android:id="@+id/btnClear"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:background="@drawable/button_background"
                    android:text="C"
                    android:textColor="#e24848"
                    android:textSize="22sp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption">

                </Button>
                <Button
                    android:id="@+id/btnBracket"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:background="@drawable/button_background"
                    android:textColor="#1aabd7"
                    android:textSize="20sp"
                    android:text="()"
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption">

                </Button>
                <Button
                    android:id="@+id/btnMod"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:background="@drawable/button_background"
                    android:textColor="#1aabd7"
                    android:textSize="20sp"
                    android:text="%"
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption">

                </Button>
                <Button
                    android:id="@+id/btnDiv"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:background="@drawable/symbol_button_background"
                    android:textSize="28sp"
                    android:textColor="#ffffff"
                    android:text="รท"
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption">

                </Button>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/LinearLayout03"
                android:layout_height="0dp"
                android:layout_width="match_parent"
                android:layout_weight="20">

                <Button
                    android:id="@+id/btn7"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:background="@drawable/button_background"
                    android:textColor="#8f8e8e"
                    android:textSize="24sp"
                    android:text="7"
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption">

                </Button>

                <Button
                    android:id="@+id/btn8"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/button_background"
                    android:text="8"
                    android:textColor="#8f8e8e"
                    android:textSize="24sp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption">

                </Button>

                <Button
                    android:id="@+id/btn9"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/button_background"
                    android:text="9"
                    android:textColor="#8f8e8e"
                    android:textSize="24sp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption">

                </Button>
                <Button
                    android:id="@+id/btnMulti"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:background="@drawable/symbol_button_background"
                    android:textSize="30sp"
                    android:textColor="#ffffff"
                    android:text="ร"
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption">

                </Button>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/LinearLayout04"
                android:layout_height="0dp"
                android:layout_width="match_parent"
                android:layout_weight="20">

                <Button
                    android:id="@+id/btn4"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:background="@drawable/button_background"
                    android:textColor="#8f8e8e"
                    android:textSize="24sp"
                    android:text="4"
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption">

                </Button>
                <Button
                    android:id="@+id/btn5"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:background="@drawable/button_background"
                    android:textColor="#8f8e8e"
                    android:textSize="24sp"
                    android:text="5"
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption">

                </Button>

                <Button
                    android:id="@+id/btn6"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/button_background"
                    android:text="6"
                    android:textColor="#8f8e8e"
                    android:textSize="24sp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption">

                </Button>
                <Button
                    android:id="@+id/btnSub"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:background="@drawable/symbol_button_background"
                    android:textSize="40sp"
                    android:textColor="#ffffff"
                    android:text="-"
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption">

                </Button>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/LinearLayout05"
                android:layout_height="0dp"
                android:layout_width="match_parent"
                android:layout_weight="20">

                <Button
                    android:id="@+id/btn1"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:background="@drawable/button_background"
                    android:textColor="#8f8e8e"
                    android:textSize="24sp"
                    android:text="1"
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption">

                </Button>
                <Button
                    android:id="@+id/btn2"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:background="@drawable/button_background"
                    android:textColor="#8f8e8e"
                    android:textSize="24sp"
                    android:text="2"
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption">

                </Button>
                <Button
                    android:id="@+id/btn3"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:background="@drawable/button_background"
                    android:textColor="#8f8e8e"
                    android:textSize="24sp"
                    android:text="3"
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption">

                </Button>
                <Button
                    android:id="@+id/btnPlus"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:background="@drawable/symbol_button_background"
                    android:textSize="28sp"
                    android:textColor="#ffffff"
                    android:text="+"
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption">

                </Button>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/LinearLayout06"
                android:layout_height="0dp"
                android:layout_width="match_parent"
                android:layout_weight="20">

                <Button
                    android:id="@+id/btnPlusMinus"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/symbol_button_background"
                    android:text="+/-"
                    android:textColor="#ffffff"
                    android:textSize="20sp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption">

                </Button>
                <Button
                    android:id="@+id/btn0"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:background="@drawable/symbol_button_background"
                    android:textSize="24sp"
                    android:textColor="#ffffff"
                    android:text="0"
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption">

                </Button>
                <Button
                    android:id="@+id/btnDot"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:background="@drawable/symbol_button_background"
                    android:textSize="30sp"
                    android:textColor="#ffffff"
                    android:text=".">

                </Button>
                <Button
                    android:id="@+id/btnEqual"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:background="@drawable/symbol_button_background"
                    android:textSize="30sp"
                    android:textColor="#ffffff"
                    android:text="="
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption">

                </Button>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>